@model WebAppToDoAssignment.Models.Todo



<h2>Delete Todo</h2>
<div>
    <h4>Are you sure you want to delete this?</h4>
    <h4>Description: @Model.Description</h4>
    <h4>Done: @Model.Done</h4>
    <h4>Assignee: @Model.Assignee.Id @Model.Assignee.FirstName @Model.Assignee.LastName</h4>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit">Delete</button>
    <a href="/Todo/Index">Cancel</a>
</form>